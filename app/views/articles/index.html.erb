<div class="text-center">
  <h1>Articles</h1>
  <p>Share your language study method!</p>
  <%= link_to "Create", @article, method: :create, class: 'btn btn-primary btn-sm' %>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <% @articles.each do |article| %>
    <li class="mb-3 d-flex">
      <div>
        <div>
          <h3><%= link_to article.title, article_path(article.id), class: "text-decoration-none" %>(How to learn <%= article.language %>)</h3>
        </div>
        <div>
          <%= link_to article.user.name, user_path(article.user), class: "text-decoration-none" %> <span class="text-muted">posted at <%= article.created_at %></span>
          <hr>
        </div>
      </div>
    </li>
    <% end %>
  </div>
</div>
<%== pagy_bootstrap_nav(@pagy) %>
